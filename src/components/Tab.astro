---
interface Props{
    title: string,
    icon: string,
    link: string,
    is_active: Boolean
}

const {title,icon,link,is_active} = Astro.props;
---

<a href=`${link}` class:list={['radio-container',{'active': is_active}]}>
    <div class="radio-tile">
        <div class="radio-icon">
            <Fragment set:html={icon} />
        </div>
        <span class="radio-label">{title}</span>
    </div>
</a>

<style>
    .radio-container{
        position: relative;
        width: 100%;
        text-decoration: none;
        cursor: pointer;
        
        .radio-tile{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: auto;
            min-height: 80px;
            background-color: var(--second-background);
            border-radius: .5em;
            padding: .2em .5em;
            transition: transform 300ms ease;

            .radio-icon svg{
                stroke: gray;
                width: 1.8em;
                height: 1.8em;
            }

            .radio-label{
                text-align: center;
                font-size: .6em;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: gray;
                margin-top: .5em;
            }
        }

        .radio-tile:hover{
            background-color: var(--primary-color);

            .radio-icon svg{
                stroke: white;
            }
            .radio-label{
                color: white;
            }
        }
    }

    .radio-container.active{
        .radio-tile{
            background-color: var(--primary-color);
            color: white;
        }
        .radio-tile:hover{
            background-color: var(--primary-color) !important;
        }
        .radio-icon svg{
            stroke: white;
        }
        .radio-label{
            color: white;
        }
    }

    @media(max-width: 992px) {
        .radio-container{
            width: 20%;
        }
    }
</style>