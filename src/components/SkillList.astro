---
interface Props{
    title: string,
    number: string,
}

const {title,number} = Astro.props;
---


<div>
    <div class="d-flex align-items-center justify-content-between mb-1">
        <h6 class="m-0">{title}</h6>
        <h6 class="m-0">{number}%</h6>
    </div>
    <div class="progress" style="height: 5px;">
        <div class="progress-bar" role="progressbar" style=`width: ${number}%;` aria-valuenow=`${number}` aria-valuemax="100"></div>
    </div>
</div>

<style>
    .progress{
        --bs-progress-bg: rgb(184, 184, 184);
        
        .progress-bar{
            background-color: var(--primary-color);
        }

    }

    h6{
        font-weight: 500;
    }
</style>